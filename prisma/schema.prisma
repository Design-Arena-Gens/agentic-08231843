generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model SocialAccount {
  id            String             @id @default(cuid())
  platform      String
  handle        String
  accessToken   String?
  refreshToken  String?
  metadata      String?
  campaigns     CampaignAccount[]
  scheduledPosts ScheduledPost[]
  analytics     AnalyticsSnapshot[]
  createdAt     DateTime           @default(now())
  updatedAt     DateTime           @updatedAt

  @@index([platform, handle])
}

model Campaign {
  id          String            @id @default(cuid())
  name        String
  goal        String?
  audience    String?
  tone        String?
  status      String            @default("DRAFT")
  startDate   DateTime?
  endDate     DateTime?
  accounts    CampaignAccount[]
  tasks       AutomationTask[]
  posts       ScheduledPost[]
  ideas       ContentIdea[]
  createdAt   DateTime          @default(now())
  updatedAt   DateTime          @updatedAt
}

model CampaignAccount {
  id         String   @id @default(cuid())
  campaign   Campaign @relation(fields: [campaignId], references: [id], onDelete: Cascade)
  campaignId String
  account    SocialAccount @relation(fields: [accountId], references: [id], onDelete: Cascade)
  accountId  String

  @@unique([campaignId, accountId])
}

model ContentIdea {
  id        String    @id @default(cuid())
  prompt    String
  aiSummary String?
  campaign  Campaign? @relation(fields: [campaignId], references: [id])
  campaignId String?
  createdBy String?
  createdAt DateTime  @default(now())
}

model ScheduledPost {
  id           String      @id @default(cuid())
  account      SocialAccount? @relation(fields: [accountId], references: [id])
  accountId    String?
  campaign     Campaign?   @relation(fields: [campaignId], references: [id])
  campaignId   String?
  content      String
  assets       String?
  scheduledFor DateTime
  status       String      @default("DRAFT")
  result       String?
  createdAt    DateTime    @default(now())
  updatedAt    DateTime    @updatedAt

  @@index([scheduledFor])
  @@index([status])
}

model AnalyticsSnapshot {
  id        String   @id @default(cuid())
  account   SocialAccount @relation(fields: [accountId], references: [id], onDelete: Cascade)
  accountId String
  date      DateTime
  metrics   String
  createdAt DateTime @default(now())

  @@index([accountId, date])
}

model AutomationTask {
  id         String         @id @default(cuid())
  type       String
  config     String
  state      String?
  campaign   Campaign       @relation(fields: [campaignId], references: [id], onDelete: Cascade)
  campaignId String
  createdAt  DateTime       @default(now())
  updatedAt  DateTime       @updatedAt
}
